.row
  .col-md-9
    - # render from mesin
    = render "shared/banner_form"
  .col-md-3
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      / = devise_error_messages!
      .form-group
        = f.label :email, "E-Mail", class: "control-label"
        = f.email_field :email, autofocus: true, class: "form-control", placeholder: "Your E-Mail"
      .form-group
        = f.label :password, class: "control-label"
        = f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Input your password", "aria-describedby"=>"validatable_help"
        %span#validatable_help.help-block
          - if @validatable
            (#{@minimum_password_length} characters minimum)  
      .form-group
        = f.label :password_confirmation, "Password Confirmation", class: "control-label"
        = f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirm your password"
      .form-group
        = f.submit "Sign up", class: "btn btn-primary"
    = render "devise/shared/links"
