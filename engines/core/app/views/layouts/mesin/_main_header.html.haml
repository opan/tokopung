%header.main-header
  / Logo
  = link_to "#", class: "logo" do

    / mini logo for sidebar mini 50x50 pixels
    %span.logo-mini
      %b> A
      LT
    / logo for regular state and mobile devices
    %span.logo-lg
      %b> Admin
      LTE
  / Header Navbar
  %nav.navbar.navbar-static-top{:role => "navigation"}
    / Sidebar toggle button
    = link_to "#", class: "sidebar-toggle", data: {toggle: "offcanvas"}, role: "button" do
      %span.sr-only Toggle navigation
    / Navbar Right Menu
    .navbar-custom-menu
      %ul.nav.navbar-nav
        / Messages: style can be found in dropdown.less
        %li.dropdown.messages-menu
          / Menu toggle button
          = link_to "#", class: "dropdown-toggle", data: {toggle: "dropdown"} do
            %i.fa.fa-envelope-o
            %span.label.label-success 4
          %ul.dropdown-menu
            %li.header You have 4 messages
            %li
              / inner menu: contains the messages
              %ul.menu
                %li
                  / start message
                  = link_to "#" do
                    .pull-left
                      / User Image
                      = image_tag "mesin/no-avatar", class: "img-circle", alt: "User Image"
                    / Message title and timestamp
                    %h4
                      Support Team
                      %small
                        %i.fa.fa-clock-o
                        5 mins
                    / The message
                    %p Why not buy a new awesome theme?
                / end message
              / /.menu
            %li.footer
              = link_to "See All Messages", "#"
        / /.messages-menu
        / Notifications Menu
        %li.dropdown.notifications-menu
          / Menu toggle button
          = link_to "#", class: "dropdown-toggle", data: {toggle: "dropdown"} do

            %i.fa.fa-bell-o
            %span.label.label-warning 10
          %ul.dropdown-menu
            %li.header You have 10 notifications
            %li
              / Inner Menu: contains the notifications
              %ul.menu
                %li
                  / start notification
                  %a{:href => "#"}
                    %i.fa.fa-users.text-aqua
                    5 new members joined today
                / end notification
            %li.footer
              %a{:href => "#"} View all
        / Tasks Menu
        %li.dropdown.tasks-menu
          / Menu Toggle Button
          = link_to "#", class: "dropdown-toggle", data: {toggle: "dropdown"} do
            %i.fa.fa-flag-o
            %span.label.label-danger 9
          %ul.dropdown-menu
            %li.header You have 9 tasks
            %li
              / Inner menu: contains the tasks
              %ul.menu
                %li
                  / Task item
                  %a{:href => "#"}
                    / Task title and progress text
                    %h3
                      Design some buttons
                      %small.pull-right 20%
                    / The progress bar
                    .progress.xs
                      / Change the css width attribute to simulate progress
                      .progress-bar.progress-bar-aqua{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "20", :role => "progressbar", :style => "width: 20%"}
                        %span.sr-only 20% Complete
                / end task item
            %li.footer
              = link_to "View All Tasks", "#"
        / User Account Menu
        %li.dropdown.user.user-menu
          / Menu Toggle Button
          = link_to "#", class: "dropdown-toggle", data: {toggle: "dropdown"} do
            / The user image in the navbar
            = image_tag("mesin/no-avatar", class: "user-image", alt: "User Image")
            / hidden-xs hides the username on small devices so only the image appears.
            %span.hidden-xs.username Alexander Pierce  

          %ul.dropdown-menu
            / The user image in the menu
            %li.user-header
              = image_tag "mesin/no-avatar", class: "img-circle", alt: "User Image"
              %p.username
                Alexander Pierce - Web Developer
                %small Member since Nov. 2012
            / Menu Body
            %li.user-body
              .col-xs-4.text-center
                %a{:href => "#"} Followers
              .col-xs-4.text-center
                %a{:href => "#"} Sales
              .col-xs-4.text-center
                %a{:href => "#"} Friends
            / Menu Footer
            %li.user-footer
              .pull-left
                = link_to "Profile","#", class: "btn-flat btn btn-default" 
              .pull-right
                = link_to "Sign out",destroy_user_session_path, method: :delete, class: "btn-flat btn btn-default" 
        / Control Sidebar Toggle Button
        %li
          %a{"data-toggle" => "control-sidebar", :href => "#"}
            %i.fa.fa-gears
